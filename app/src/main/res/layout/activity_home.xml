<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ActivityHome"
    android:orientation="vertical">
    <Button
        android:id="@+id/bActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. ACTIVITY"
        android:gravity="left"
        android:textSize="9pt"/>
    <Button
        android:id="@+id/bIntent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. INTENT"
        android:gravity="left"
        android:textSize="9pt"/>
    <Button
        android:id="@+id/bFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. FRAGMENT"
        android:gravity="left"
        android:textSize="9pt"/>
    <Button
        android:id="@+id/bAsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. ASYNCTASK"
        android:gravity="left"
        android:textSize="9pt"/>
    <Button
        android:id="@+id/bService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. SERVICE"
        android:gravity="left"
        android:textSize="9pt"/>
    <Button
        android:id="@+id/bReceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6. BROADCAST RECEIVER"
        android:gravity="left"
        android:textSize="9pt"/>



</LinearLayout>